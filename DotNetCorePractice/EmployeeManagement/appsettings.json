{
  "Logging": {
    // Parameter Specific to Console Window LogLevel
    "Console": {
      "LogLevel": {
        "Default": "Trace",
        "Microsoft*": "Warning"
      }
    },
    // Parameter Specific to Debug Window LogLevel
    "Debug": {
      "LogLevel": {
        "Default": "Warning",
        "EmployeeManagement.Controllers.HomeController": "Trace",
        "EmployeeManagement.Models.SQLEmployeeRepository": "Error",
        "Microsoft*": "Warning"
      }
    },
    // Parameter Global LogLevel
    "LogLevel": {
      "Default": "Warning", // By default log only Warning
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "Microsoft*": "Warning" // All from Microsoft
    }
  },
  "AllowedHosts": "*",
  "MyKey": "Value of MyKey from appsettings.json",
  "ConnectionStrings": {
    "EmployeeDBConnection": "Data Source=.;Initial Catalog=EmployeeDB;Integrated Security=True"
  }
}
